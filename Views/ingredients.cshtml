<h1>All of the ingredients</h1>
@if(@Model.Count != 0)
{
  @foreach(var ingredient in Model)
  {
    <li><a href="/ingredients/@ingredient.GetId()">@ingredient.GetName()</a></li>
  }
}
else
{
  <p>
    there is no ingredients.
  </p>
}
<form action="/ingredients/clear" method="post">
  <button type="submit">Delete</button>
</form>
<p>
  <a href="/ingredients/new">add a new ingredient</a>
</p>
<p>
  <a href="/">return home</a>
</p>
