<h1>Welcome</h1>
<h1>This is a box of recipes</h1>
@if(@Model.Count != 0)
{
  @foreach(var category in Model)
  {
    <li><a href="/categories/@category.GetId()">@category.GetName()</a></li>
  }
}
else
{
  <p>This page sucks! Why is there no categories?</p>
}
<form action="/categories/clear" method="post">
  <button type="submit">Delete</button>
</form>
<p><a href="/newCategory">Click here to add a new category</a></p>
<p><a href="/recipes">Click here to see all recipes available</a></p>
<p><a href="/ingredients">Click here to search recipes by ingredient</a></p>
