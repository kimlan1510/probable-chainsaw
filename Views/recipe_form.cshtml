<h1>Get Ready!</h1>
<form action="/recipes/new" method="post">
  <label for="name">Name of your recipe</label>
  <input id="name" name="name" type="text">
  </br>
  <label for="ingredient">Ingredients needed</label>
  @foreach (var ingredient in Model["ingredients"])
  {
    <input type="checkbox" name="ingredient" value="@ingredient.GetId()">@ingredient.GetName()<br>
  }
  </br>

  <label for="category">Category</label>
  <select name="category_id">
    @foreach (var category in Model["categories"])
    {
      <option value="@category.GetId()">@category.GetName()</option>
    }
  </select>
</br>
  <label for="instructions">Instructions</label>
  <input id="instructions" name="instructions" type="text">
  </br>
  <button type="submit" name="button">submit</button>
</form>
<p>
  <a href="/ingredients/new">Cant find an ingredient. Add it to database.</a>
</p>
<p>
 <a href="/">Return Home</a>
</p>
